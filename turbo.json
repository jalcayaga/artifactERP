{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start:dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**"
      ],
      "env": [
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_ADMIN_URL",
        "NEXT_PUBLIC_API_BASE_URL",
        "NEXT_PUBLIC_CHATWOOT_TOKEN",
        "NEXT_PUBLIC_CHATWOOT_BASE_URL",
        "NEXT_PUBLIC_N8N_WEBHOOK_URL"
      ]
    },
    "lint": {}
  }
}